@page
@model RateMySdsu.Pages.Reviews.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Review.ClassID" class="control-label"></label>
                <select asp-for="Review.ClassID" class ="form-control" asp-items="ViewBag.ClassID" asp-text></select>
            </div>
            <div class="form-group">
                <label asp-for="Review.StudentID" class="control-label"></label>
                <select asp-for="Review.StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Review.Score" class="control-label"></label>
                <input asp-for="Review.Score" class="form-control" />
                <span asp-validation-for="Review.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review.Text" class="control-label"></label>
                <input asp-for="Review.Text" class="form-control" />
                <span asp-validation-for="Review.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
